			<If sName="number of #,number #,# count" desc="Number of %match:Sentence:LCase:Plural%" />
			<If sName="size of #,# size" desc="Size of the %match:Sentence:LCase%" />
			<If sName="type of #,# type" desc="Type of the %match:Sentence:LCase%" />
